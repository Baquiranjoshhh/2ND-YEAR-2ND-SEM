"""

count=0
sum=0
while True:
    num=input("Please enter a number (Press 0 to stop): ")
    if num=="0":
        break
    else:
        sum += int(num)
        count += 1

if count>0:
    mean=sum/count
    print("Count: ", count)
    print("Sum: ", sum)
    print("Mean: ", mean)
else:
    print("No numbers were entered. Please enter a number/s")
