Username = "Joshua04"
Password = "12345678"
Attempts = 0

while Attempts < 5:
    username = input("\nPlease enter your username: ")
    password = input("Please nter your password: ")
    
    if username == Username and password == Password:
        print("You are now logged in!")
        break 
        
    else:
        print("Incorrect username or password. Please try again.")
        Attempts += 1

if Attempts == 5:
    print("You entered a wrong username or password 5 times. Please try again later.")
